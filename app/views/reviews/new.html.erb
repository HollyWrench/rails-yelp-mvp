<h1>New Review</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>

  <%= f.input :rating, as: :select, collection: [1, 2, 3, 4, 5] %>

  <div class="form-actions btn btn-primary mt-2 mx-2 mb-2">
    <%= f.button :submit %>
  </div>

<% end %>


<%= link_to '🔸 Go ⏪ 🔸 (🔙)', restaurants_path %>

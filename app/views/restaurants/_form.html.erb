<%= simple_form_for(@restaurant) do |f| %>
  <%# error notifications on thiers, otherwise same %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
  </div>

  <div class="form-actions btn btn-primary btn-sm">
    <%= f.button :submit %>
  </div>
<% end %>
